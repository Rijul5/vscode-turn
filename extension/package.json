{
    "name": "vscode-xtext-turn",
    "displayName": "TURN VS Code Extension",
    "description": "An example Xtext-based DSL with Sprotty diagrams for TURN",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "turn",
                "aliases": [
                    "turn",
                    "turn"
                ],
                "extensions": [
                    ".turn"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "turn",
                "scopeName": "source.turn",
                "path": "./syntaxes/turn.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "turn.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "Turn Diagram"
            },
            {
                "command": "turn.diagram.fit",
                "title": "Fit to Screen",
                "category": "Turn Diagram"
            },
            {
                "command": "turn.diagram.center",
                "title": "Center selection",
                "category": "Turn Diagram"
            },
            {
                "command": "turn.diagram.delete",
                "title": "Delete selected element",
                "category": "Turn Diagram"
            },
            {
                "command": "turn.diagram.export",
                "title": "Export diagram to SVG",
                "category": "Turn Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "turn.diagram.open",
                    "when": "editorLangId == 'turn'"
                },
                {
                    "command": "turn.diagram.fit",
                    "when": "turn-diagram-focused"
                },
                {
                    "command": "turn.diagram.center",
                    "when": "turn-diagram-focused"
                },
                {
                    "command": "turn.diagram.delete",
                    "when": "turn-diagram-focused"
                },
                {
                    "command": "turn.diagram.export",
                    "when": "turn-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "turn.diagram.open",
                    "when": "editorLangId == 'turn'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "turn.diagram.open",
                    "when": "editorLangId == 'turn'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "turn.diagram.open",
                    "when": "resourceExtname == '.turn'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "turn.diagram.fit",
                "when": "turn-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "turn.diagram.center",
                "when": "turn-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "turn.diagram.export",
                "when": "turn-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "turn.diagram.delete",
                "when": "turn-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:turn",
        "onCommand:turn.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/turn-extension",
    "dependencies": {
        "sprotty-vscode": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^8.0.0",
        "@types/vscode": "1.46.0",
        "rimraf": "^2.6.3",
        "source-map-loader": "^1.0.2",
        "ts-loader": "^8.0.3",
        "tslint": "^5.11.0",
        "typescript": "3.8.3",
        "vscode-languageclient": "^5.2.1",
        "vscode-languageserver": "^5.2.1",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf extension/lib extension/pack",
        "build": "tsc && webpack --mode=development",
        "watch": "tsc -w",
        "watch:webpack": "webpack --mode=development --watch",
        "publish": "vsce publish"
    }
}
